<Ui xmlns="http://www.blizzard.com/wow/ui/"   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/"> 
    <Script file="localization.lua"/>
	<Script file="SlamAlert.lua"/> 
    
	<MessageFrame name="SAlertMessageFrame" displayDuration="1" insertMode="TOP" parent="UIParent" frameStrata="LOW" toplevel="true">
		<Size>
			<AbsDimension x="512" y="60"/>
		</Size>
        <Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
        <Scripts>
            <OnLoad>SA_OnLoad(self);</OnLoad>
			<OnEvent>SA_OnEvent(self, event, ...);</OnEvent>
		</Scripts>
		<FontString inherits="NumberFontNormalHuge" justifyH="CENTER"/>
	</MessageFrame>
</Ui>